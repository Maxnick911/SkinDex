<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Темна тема для застосунку -->
    <style name="Theme.SkinDex.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/accent_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/brown</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/text_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="titleMarginBottom">8dp</item>
    </style>
</resources>
